{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
    <h1>Payment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdP</th>
                <th>Type</th>
                <th>Somme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.idP }}</td>
                <td>{{ payment.type }}</td>
                <td>{{ payment.somme }}</td>
                <td>
                    <a href="{{ path('app_payment_show', {'idP': payment.idP}) }}">show</a>
                    <a href="{{ path('app_payment_edit', {'idP': payment.idP}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payment_new') }}">Create new</a>
{% endblock %}
