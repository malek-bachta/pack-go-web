{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdC</th>
                <td>{{ user.idC }}</td>
            </tr>
            <tr>
                <th>TelC</th>
                <td>{{ user.telC }}</td>
            </tr>
            <tr>
                <th>AgeC</th>
                <td>{{ user.ageC }}</td>
            </tr>
            <tr>
                <th>NomC</th>
                <td>{{ user.nomC }}</td>
            </tr>
            <tr>
                <th>PrenomC</th>
                <td>{{ user.prenomC }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
